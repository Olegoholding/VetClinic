                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Список болезней" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click" Tag="СписокХозяев" Uid="Фамилия" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="18" Height="18">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="3.232" Canvas.Top="3.232">
                                    <Path.Data>
                                        <PathGeometry Figures="M12 3.75a3.75 3.75 0 1 0 0 7.5a3.75 3.75 0 0 0 0-7.5m-4 9.5A3.75 3.75 0 0 0 4.25 17v1.188c0 .754.546 1.396 1.29 1.517c4.278.699 8.642.699 12.92 0a1.537 1.537 0 0 0 1.29-1.517V17A3.75 3.75 0 0 0 16 13.25h-.34c-.185 0-.369.03-.544.086l-.866.283a7.251 7.251 0 0 1-4.5 0l-.866-.283a1.752 1.752 0 0 0-.543-.086z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Список хозяев" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
            <Border Width="1" Background="Gray" HorizontalAlignment="Right"/>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Время работы" HorizontalAlignment="Center" FontWeight="Bold" FontSize="48" Margin="0,15,0,0"/>
                <TextBlock Text="8:00 - 18:00" HorizontalAlignment="Center" FontSize="48" Margin="0,15,0,0"/>
                <Border Height="1" Width="400" Background="Gray" Margin="0,15,0,0" />

                <TextBlock Text="Текущее время" HorizontalAlignment="Center" FontWeight="Bold" FontSize="48" Margin="0,15,0,0"/>
                <TextBlock x:Name="CurrentTime" Text="CurrentTime" HorizontalAlignment="Center" FontSize="48" Margin="0,15,0,0"/>
            </StackPanel>
        </Grid>

        <ComboBox Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20">
            <ComboBoxItem Content="Светлая"/>
            <ComboBoxItem Content="Тёмная"/>
        </ComboBox>

        <Frame x:Name="Frame" Grid.RowSpan="2" NavigationUIVisibility="Hidden"/>
        
    </Grid>
</Window>
