                                    <Path.Data>
                                        <PathGeometry Figures="M432 416c8.8 0 16-7.2 16-16V60.1c0-15.5-12.6-28.1-28.1-28.1H368v384h64z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Журнал посещений" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click" Tag="СписокЖивотных" Uid="Кличка" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="20" Height="20">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="4.043" Canvas.Top="3.502" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Path.Data>
                                        <PathGeometry Figures="M10.876 8.661c.387.216.848.339 1.37.339c.847 0 1.555-.307 2.047-.844c.481-.526.703-1.216.703-1.906a.75.75 0 0 0-1.5 0c0 .377-.12.686-.31.894c-.18.196-.472.356-.94.356c-.449 0-.73-.162-.914-.37A1.46 1.46 0 0 1 11 6.29V4.25A2.25 2.25 0 0 1 13.25 2h3.185c.509 0 1.007.141 1.44.408l2.768 1.703A.75.75 0 0 1 21 4.75v1.5a2.25 2.25 0 0 1-2.25 2.25h-.25v9.533c.92.088 1.618.366 2.047.964c.257.359.36.76.408 1.129c.045.352.045.736.045 1.09v.034a.75.75 0 0 1-.75.75h-3.252v-.774c0-.572.002-2.208-1.5-3.169v-2.804a.75.75 0 0 0-1.5 0v2.266a5 5 0 0 0-.697-.022q-.04 0-.064.003h-.025l-.003.001a.75.75 0 1 0 .082 1.498h.003l.013-.001l.05-.002c.041-.002.093-.003.141-.003c.432 0 .715.073.901.17l.033.017c1.039.484 1.066 1.439 1.066 2.07V22H5.833a3.833 3.833 0 0 1-1.97-7.123a.75.75 0 0 1 .772 1.287A2.333 2.333 0 0 0 5.833 20.5c.319 0 .517-.083.649-.176c.139-.098.248-.238.331-.407a1.9 1.9 0 0 0 .187-.69v-.035l.004-.143a14 14 0 0 1 .26-2.187c.26-1.291.797-2.968 1.952-4.139c.848-.86 1.309-2.119 1.547-3.364q.069-.358.113-.698" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Список животных" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click" Tag="СписокБолезнией" Uid="Название" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="18" Height="18">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="3.232" Canvas.Top="3.232">
