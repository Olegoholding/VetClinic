<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="1000">
    <Grid Background="{DynamicResource Current}">
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Accent}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Width="250" TextAlignment="Center" Text="Аптечный киоск" FontSize="48" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" FontWeight="Bold" Foreground="White"/>
                <TextBlock TextAlignment="Center" Text="+" FontSize="120" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" FontWeight="Bold" Foreground="White" Margin="30,0,0,30"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <WrapPanel HorizontalAlignment="Center">
                <Button Click="Button_Click" Tag="ЖурналПосещений" Uid="Номер" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="18" Height="18">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="3.232" Canvas.Top="3.232">
                                    <Path.Data>
                                        <PathGeometry Figures="M92.1 32C76.6 32 64 44.6 64 60.1V452c0 15.5 12.6 28.1 28.1 28.1H432c8.8 0 16-7.2 16-16s-7.2-16-16-16H112.5c-8.2 0-15.4-6-16.4-14.1-1.1-9.7 6.5-18 15.9-18h208V32H92.1z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="11" Stretch="Fill" Width="3" Canvas.Left="11.97" Canvas.Top="3.322" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Path.Data>
                                        <PathGeometry Figures="M432 416c8.8 0 16-7.2 16-16V60.1c0-15.5-12.6-28.1-28.1-28.1H368v384h64z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Журнал продаж" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click" Tag="СписокЖивотных" Uid="Кличка" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="20" Height="20">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="4.043" Canvas.Top="3.502" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Path.Data>
                                        <PathGeometry Figures="M17 28.013c.503-.115 2 1.987 2 1.987h10s1.497-2.102 2-1.987c5.404 1.23 11 4.782 11 8.557V42H6v-5.43c0-3.775 5.596-7.327 11-8.557M32 34v-2h2v2h2v2h-2v2h-2v-2h-2v-2zm-8-10a8 8 0 1 0 0-16a8 8 0 0 0 0 16m0 2c5.523 0 10-4.477 10-10S29.523 6 24 6s-10 4.477-10 10s4.477 10 10 10" FillRule="EvenOdd"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Работники аптеки" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click" Tag="СписокБолезнией" Uid="Название" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="18" Height="18">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="3.232" Canvas.Top="3.232">
                                    <Path.Data>
                                        <PathGeometry Figures="M21 11h-.17c-1.053 0-1.958-.669-2.357-1.644l-.021-.049c-.408-.977-.249-2.097.5-2.846l.119-.119a.999.999 0 1 0-1.414-1.414l-.119.119c-.749.749-1.869.908-2.846.5l-.049-.021C13.669 5.128 13 4.218 13 3.165v-.081C13 2.447 12.553 2 12 2s-1 .447-1 1v.036c0 1.096-.66 2.084-1.673 2.503l-.006.003a2.71 2.71 0 0 1-2.953-.588l-.025-.025a.999.999 0 1 0-1.414 1.414l.036.036a2.69 2.69 0 0 1 .583 2.929l-.027.064A2.638 2.638 0 0 1 3.085 11h-.001C2.447 11 2 11.447 2 12s.447 1 1 1h.068a2.66 2.66 0 0 1 2.459 1.644l.021.049a2.69 2.69 0 0 1-.583 2.929l-.036.036a.999.999 0 1 0 1.414 1.414l.036-.036a2.689 2.689 0 0 1 2.929-.583l.143.06A2.505 2.505 0 0 1 11 20.83v.085c0 .638.447 1.085 1 1.085s1-.448 1-1v-.17c0-1.015.611-1.93 1.55-2.318l.252-.104a2.508 2.508 0 0 1 2.736.545l.119.119a.999.999 0 1 0 1.414-1.414l-.119-.119c-.749-.749-.908-1.869-.5-2.846l.021-.049c.399-.975 1.309-1.644 2.362-1.644h.08c.638 0 1.085-.447 1.085-1s-.447-1-1-1zM8 13a1 1 0 1 1 0-2a1 1 0 0 1 0 2zm5 3.5a1 1 0 1 1 0-2a1 1 0 0 1 0 2zm1-4.5a2 2 0 1 1 .001-4.001A2 2 0 0 1 14 12z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Лекарства" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
                <Button Click="Button_Click" Tag="СписокХозяев" Uid="Фамилия" Margin="15" Width="200" Height="200">
                    <StackPanel>
                        <Viewbox Stretch="Uniform" Height="159" Width="148">
                            <Canvas Width="18" Height="18">
                                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{StaticResource Accent}" Height="13" Stretch="Fill" Width="12" Canvas.Left="3.232" Canvas.Top="3.232">
                                    <Path.Data>
                                        <PathGeometry Figures="M12 3.75a3.75 3.75 0 1 0 0 7.5a3.75 3.75 0 0 0 0-7.5m-4 9.5A3.75 3.75 0 0 0 4.25 17v1.188c0 .754.546 1.396 1.29 1.517c4.278.699 8.642.699 12.92 0a1.537 1.537 0 0 0 1.29-1.517V17A3.75 3.75 0 0 0 16 13.25h-.34c-.185 0-.369.03-.544.086l-.866.283a7.251 7.251 0 0 1-4.5 0l-.866-.283a1.752 1.752 0 0 0-.543-.086z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <Border Background="Gray" Height="1" Width="150"/>
                        <TextBlock Text="Покупатели" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
            <Border Width="1" Background="Gray" HorizontalAlignment="Right"/>
        </Grid>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,40">
            <StackPanel>
                <TextBlock Text="Время работы" HorizontalAlignment="Center" FontWeight="Bold" FontSize="28" Margin="0,15,0,0"/>
                <TextBlock Text="8:00 - 18:00" HorizontalAlignment="Center" FontSize="28" Margin="0,15,0,0"/>
            </StackPanel>
            <Border  Width="1" Background="Gray" Margin="30,15,30,0" />
            <StackPanel>
                <TextBlock Text="Текущее время" HorizontalAlignment="Center" FontWeight="Bold" FontSize="28" Margin="0,15,0,0"/>
                <TextBlock x:Name="CurrentTime" Text="CurrentTime" HorizontalAlignment="Center" FontSize="28" Margin="0,15,0,0"/>
            </StackPanel>

        </StackPanel>

        <ComboBox Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20">
            <ComboBoxItem Content="Светлая"/>
            <ComboBoxItem Content="Тёмная"/>
        </ComboBox>

        <Frame x:Name="Frame" Grid.RowSpan="3" NavigationUIVisibility="Hidden"/>
        
    </Grid>
</Window>
