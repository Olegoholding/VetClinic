<Page x:Class="VetClinic.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid Background="{DynamicResource Current}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="140"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Accent}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ToMainWindow" Cursor="Hand" MouseDown="ToMainWindow_MouseDown" Text="&lt;&lt;&lt;&lt;&lt;" Foreground="{StaticResource Button}" TextDecorations="Underline" VerticalAlignment="Center" FontSize="20" Margin="15,0,0,0"/>
                    <Border Width="1" Background="{StaticResource Button}" Margin="40,0,0,0" HorizontalAlignment="Right"/>
                </StackPanel>

                <TextBlock x:Name="DirName" Grid.Column="1" Text="Название категории" Foreground="{StaticResource Button}" VerticalAlignment="Center" FontSize="28" Margin="15,0,0,0" HorizontalAlignment="Center" FontWeight="Bold"/>

            </Grid>
        </Border>

        <DataGrid Name="DataGrid" Grid.Row="1"/>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox Name="SrcBox" Margin="15,15,180,0" VerticalAlignment="Top" FontSize="28" Height="50" Grid.ColumnSpan="2"/>

            <Button Name="SrcBtn" Click="SrcBtn_Click" VerticalAlignment="Bottom" Margin="15,0,180,15" Height="50" Grid.ColumnSpan="2">
                <TextBlock Name="TexxtBox" Text="Поиск" Foreground="{StaticResource Accent}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold"/>
            </Button>

            <Button Name="AddBtn" Click="AddBtn_Click" Grid.Column="1" VerticalAlignment="Top" Margin="240,15,15,0" Height="50">
                <TextBlock Text="Добавить" Foreground="{StaticResource Accent}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold"/>
            </Button>
            <Button Name="DltBtn" Click="DltBtn_Click" Grid.Column="1" VerticalAlignment="Bottom" Margin="240,0,15,15" Height="50">
                <TextBlock Text="Удалить" Foreground="{StaticResource Accent}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold"/>
            </Button>
        </Grid>

    </Grid>
</Page>
